      "format-source": "<span color='#fab387'> </span> {volume}%",
      "format-source-muted": "<span color='#fab387'>  </span>",
      "format-icons": {
        "alsa_output.usb-Kingston_HyperX_Virtual_Surround_Sound_00000000-00.analog-stereo": "󰋎 ",
